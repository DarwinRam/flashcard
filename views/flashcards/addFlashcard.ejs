<%- include('../partials/header') %>

<div class="add-flashcard-container">
  <h1>➕ Add a New Flashcard</h1>

  <a href="/flashcards" class="back-link">⬅️ Back to Flashcards</a>

  <form action="/flashcards/add" method="POST" class="flashcard-form">
    <div class="form-group">
      <label for="front">Front (Question/Term):</label>
      <input
  type="text"
  name="front"
  value="<%= typeof front !== 'undefined' ? front : '' %>"
  class="form-control <%= errors && (!front || front.trim() === '') ? 'invalid' : '' %>"
  placeholder="Enter the question or term"
/>
    
      <% if (errors && errors.find(e => e.includes('Front'))) { %>
        <div class="field-error">This field is required.</div>
      <% } %>
    </div>

    <div class="form-group">
      <label for="back">Back (Answer/Definition):</label>
      <input
      type="text"
      name="back"
      value="<%= typeof back !== 'undefined' ? back : '' %>"
      class="form-control <%= errors && (!back || back.trim() === '') ? 'invalid' : '' %>"
      placeholder="Enter the answer or definition"
    />

      <% if (errors && errors.find(e => e.includes('Back'))) { %>
        <div class="field-error">This field is required.</div>
      <% } %>
    </div>

    <button type="submit" class="create-btn">Create Flashcard</button>
  </form>
</div>

<%- include('../partials/footer') %>
